{
  "testEnvironment": "node",
  "rootDir": "../",
  "moduleFileExtensions": [
    "js",
    "json"
  ],
  "moduleDirectories": [
    "node_modules",
    "shared"
  ],
  "moduleNameMapper": {
    "^.+\\.(png|jpe?g|gif|svg|ico|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/FileStub.js",
    "^.+\\.(css|scss)$": "<rootDir>/test/CSSStub.js",
    "^src(.*)$": "<rootDir>/src$1",
    "^app(.*)$": "<rootDir>/src/app$1",
    "^styles(.*)$": "<rootDir>/src/styles$1",
    "^lib(.*)$": "<rootDir>/lib$1"
  },
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!**/node_modules/**"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest",
    ".*\\.(vue)$": "jest-vue-preprocessor"
  }
}
